<% layout('layouts/boilerplate'); %>
    <div class="row mb-5">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3 mb-5">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¬</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00"
                            aria-label="price" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" rows="4"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <!-- <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required> -->
                    <!-- <label class="form-label" for="image">Image</label>
                    <input type="file" name="image" id="image" class="form-control" multiple>
                    <div class="valid-feedback">
                        Looks good!
                    </div> -->
                    <div class="form-file custom-file">
                        <div class="input-group mb-3">

                            <input type="file" class="form-control" id="image" aria-describedby="image" name="image"
                                aria-label="Browse" multiple>
                        </div>

                    </div>
                </div>


                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>

            </form>
        </div>
    </div>